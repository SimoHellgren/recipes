<html>
<meta charset="UTF-8">
<title>
    Keito kirja
</title>

<head>
    <link rel="stylesheet" href="styles.css">
    <script src="scripts.js"></script>
</head>

<body>
    <h1>{{name}}</h1>

    <p>Alkuperä: <a href="{{source}}">{{source}}</a></p>

    <h2>Ainehet</h2>
    <ul>
        {% for ingredient in ingredients %}
        <li onclick="toggleDone(this)">{{ ingredient }}</li>
        {% endfor %}
    </ul>

    <h2>Tee näin</h2>
    <ol>
        {% for step in method %}
        <li onclick="toggleDone(this)"> {{step}}</li>
        {% endfor %}
    </ol>
</body>

</html>